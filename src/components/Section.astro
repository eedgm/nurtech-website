---
interface Props {
	bg: string;
    title: string;
    description: string;
}

const { bg, title, description } = Astro.props;
---

<section class:list={[ 'py-20', [ bg ] ]}>
    <div class="container mx-auto px-6 md:px-12 xl:px-32">
        <div class="mb-16 text-center">
            <h2 class="mb-4 text-center text-2xl text-gray-900 font-bold md:text-4xl">{ title }</h2>
            <p class="text-gray-600 lg:w-8/12 lg:mx-auto">{ description }</p>
        </div>
        <div class="grid gap-12 items-center md:grid-cols-3">
            <slot />
        </div>
    </div>
</section>